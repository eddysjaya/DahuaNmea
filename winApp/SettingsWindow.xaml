<Window x:Class="DahuaNmeaViewer.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="âš™ Application Settings" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <GroupBox Grid.Row="1" Header="ADB Configuration" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Row="0" Grid.Column="0" Text="ADB Path:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtAdbPath" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Button Grid.Row="0" Grid.Column="2" Content="Browse..." Click="BtnBrowseAdb_Click" Padding="10,5"/>
                
                <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Content="Test Connection" 
                        Click="BtnTestConnection_Click" Margin="0,10,0,0" Padding="10,5"
                        Background="#3498DB" Foreground="White"/>
            </Grid>
        </GroupBox>
        
        <GroupBox Grid.Row="2" Header="Download Settings" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <CheckBox x:Name="chkAutoDelete" Content="Automatically delete files from device after download" 
                         IsChecked="True" Margin="0,5"/>
                <CheckBox x:Name="chkConfirmDelete" Content="Confirm before deleting" 
                         IsChecked="False" Margin="0,5"/>
            </StackPanel>
        </GroupBox>
        
        <Border Grid.Row="4" BorderBrush="#BDC3C7" BorderThickness="0,1,0,0" Padding="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Click="BtnSave_Click" IsDefault="True" 
                        Background="#27AE60" Foreground="White" FontWeight="Bold" Padding="20,5" Margin="0,0,10,0"/>
                <Button Content="Cancel" Click="BtnCancel_Click" IsCancel="True" Padding="20,5"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
